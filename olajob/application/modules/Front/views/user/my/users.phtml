<%if(list.length){%>
    <%for(var i=0, len=list.length; i<len; i++){%>
    <li>
        <div class="side">
            <div class="pic">
                <img src="<%=list[i].headimgurl%>"/>
            </div>
        </div>
        <a href="<%=list[i].link%>" class="main">
            <div class="title"><%=list[i].realname%></div>
            <ul class="detail <%=list[i].description?'custom':''%>">
                <li class="age"><i class="icon-age"></i><%=list[i].age%>岁</li>
