<body module-id="myUsers">
<div class="module">
    <section class="layout-center">
        <ul class="list-wrap" id="J_listWrap" data-ajax="<?php echo $webroot;?>/api/user/users?job_id=<?php echo $job_id;?>"></ul>
    </section>
