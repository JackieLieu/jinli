	    	 var url = 'indexPush';
	     } else {
	    	 var url = 'index';
	     }
		ajaxRedirect(ret, baseurl+'/Admin/Msg/'+url);
	});
})
$('#start_time').datetimepicker();
$('#end_time').datetimepicker();
//广告表单数据提交
function showtd(){
	var value=$("select[name=type]").val();
	if (value == 201) {
		 $("#th_link").html('游戏内容ID');
		 $("select[name=totype] option[value='3']").remove(); 
		 $("#tr-object").hide();
	} else if(value == 203){
		 $("#th_link").html('分类ID');
		 $("select[name=totype] option[value='3']").remove();
		 $("#tr-object").hide();
	} else if(value == 202){
		 $("#th_link").html('专题ID');
		 $("select[name=totype] option[value='3']").remove();
		 $("#tr-object").hide();
	} else if(value == 204){
		 $("#th_link").html('活动ID');
		 $("select[name=totype]").append("<option value='3'>其他</option>");
	} else if(value == 205){
		 $("#th_link").html('链接');
		 $("select[name=totype] option[value='3']").remove();
		 $("#tr-object").hide();
	} else if(value == 206){
		 $("#th_link").html('礼包ID');
		 $("select[name=totype]").append("<option value='3'>其他</option>");
	} else if(value == 207){
		 $("#th_link").html('文本信息');
		 $("select[name=totype] option[value='3']").remove();
		 $("#tr-object").hide();
	}
}
$("select[name=totype]").change(function(){
	var v = $(this).val();
	switch(v) {	
		case '0':
			$("#tr-reciver").hide();
			$("#tr-object").hide();
			break;
		case '1':
			$("#tr-reciver").show();
			$("#tr-object").hide();
			break;
		case '2':
			$("#tr-reciver").hide();
			$("#tr-object").hide();
			break;
		case '3':
			$("#tr-reciver").hide();
			$("#tr-object").show();
			break;
		default:
			$("#tr-reciver").hide();
		    $("#tr-object").hide();
			break;
	} 
});
</script>

