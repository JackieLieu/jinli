{{pagerCss}}
<div class="colMain">
    <div class="title"><p class="fl">资讯列表</p></div>
    <div class="main">
        <div class="toolbar">
            <div class="search fl">
                <form action="/article/index" method="GET">
                <span>
                    <input type="text" class="iText" name='article_check' value='{{params.article_check}}' /><input type="submit" class="submit" value="" />
                    <span class="sign">可以按资讯ID、标题来查询</span>
                </span>
                </form>
            </div>
            <a href="../article/edit" class="fr add">新增</a>
        </div>
        <div class="content">
            <div class="grid">
                <table>
                    <thead>
                        <tr>
                            <th>资讯ID</th>
                            <th>发布时间</th>
                            <th>标题</th>
                            <th>点击数</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- loop result -->
                        <tr>
                            <td><span class="blue">{{result' value.id}}</span></td>
                            <td>{{date('Y-m-d H:i:s',result' value.pubdate)}}</td>
                            <td>{{result' value.title}}</td>
                            <td>{{result' value.click}}</td>
                            <td>
                                <a href="../article/edit?id={{result' value.id}}" class="edit" title="编辑"></a>
                                |
                                <a href="../article/delete?id={{result' value.id}}" class="del" title="删除"></a>
                            </td>
                        </tr> 
                        <!-- endloop -->
                    </tbody>
                </table>
            </div>
            <div style="margin: 20px auto; text-align: center;width:290px;">{{pager.pages}}</div>
        </div>
    </div>
</div>
