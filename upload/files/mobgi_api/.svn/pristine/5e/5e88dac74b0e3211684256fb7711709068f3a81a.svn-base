<div class="colMain">
    <div class="title"><p class="fl">角色列表</p></div>
    <div class="main">
        <div class="toolbar">
            <div class="search fl">
                <form action="/role/index" method="GET">
                <span>角色：{{select}}</span>
                <span>
                    产品名称：<input typt="text" class="iText" name='product_name' value='{{params.product_name}}' /><input type="submit" class="submit" value="" />
                </span>
                </form>
            </div>
            <a href="/role/edit" class="fr add">新增</a>
        </div>
        <div class="content">
            <div class="grid">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>用户组</th>
                            <th>拥有权限的产品组</th>
                            <th>帐号数量</th>
                            <th>创建时间</th>
                            <th>最后更新</th>
                            <th>最后操作人</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- loop result -->
                        <tr>
                            <td><span class="blue">{{result' value.id}}</span></td>
                            <td>{{result' value.title}}</td>
                            <td title="{{result' value.product_names}}">{{result' value.short_product_names}}</td>
                            <td>{{result' value.num}}</td>
                            <td>{{result' value.createdate}}</td>
                            <td>{{result' value.lastupdate}}</td>
                            <td>{{result' value.operator}}</td>
                            <td>
                                <a href="../role/edit?id={{result' value.id}}" class="edit" title="编辑"></a>
                                |
                                <a href="../role/delete?id={{result' value.id}}" class="del" title="删除"></a>
                            </td>
                        </tr> 
                        <!-- endloop -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>