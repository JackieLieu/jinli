<script type="text/javascript">
    var token = "<?php echo $token; ?>"
    $(".delBtn").click(function () {
        var clockid = $(this).attr("value");
        $(".del_ok").click(function (e) {
            var data = "id=" + clockid + "&token=" + token;
            var url = "/Admin/Clockres/delclock";
            $(".pop_wraper").removeClass("show");
            $.post(url, data, function (d) {
                if (d) {
                    history.go(-1);
                }
            });
            stopPropagation(e)
        })
    });

    $(".edit_ok").click(function () {
        $(".pop_wraper").removeClass("show");
        var clockid = $("#clockid").attr("clockid");
        var note = $(".txt_editor").val();
        var p_time = $(".datepicker").val();
        var status = $(".check_data").attr("val");
        if (p_time = 'undefined') {
            p_time = '';
        }

        if (status == 2 && note == '') {
            alert("请填写不通过原因");
            return 0;
        }
        var url = "/Admin/clockres/up_status";
        var data = "clockid=" + clockid + "&note=" + note + "&publishtime=" + p_time + "&status=" + status + "&token=" + token;
        $.post(url, data, function (d) {
            if (d) {
                history.go(-1);
            } else {
                alert("提交失败！请重新操作");
                return 0;
            }
        });

    });

</script>
