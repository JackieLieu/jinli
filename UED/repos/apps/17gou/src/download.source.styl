body {
	background: #FCFCFC;
}

/****   button start ***/
.btn {
	display: inline-block;
	-webkit-box-sizing: -border-box;
	-moz-box-sizing: -border-box;
	-ms-box-sizing: -border-box;
	-o-box-sizing: -border-box;
	box-sizing: -border-box;
}

.btn-contact {
	display: inline-block;
	background: url(../img/btn-contact.png) 0 0 no-repeat;
	width: 66px;
	height: 22px;
}

.btn-android,
.btn-iphone {
	width: 300px;
	height: 53px;
	background-image: url(../img/button.png);
	background-repeat: no-repeat;
}
.btn-android {
	background-position: 0 0;
	&:hover{
		background-position: 0 -64px;
	}
}
.btn-iphone {
	background-position: 0 -133px;
	&:hover {
		background-position: 0 -207px;
	}
}
/********************  button end  ****************/

/********************** icon start *******************/
.icon {
	display: inline-block;
	background-repeat: no-repeat;
}
.icon-weibo, 
.icon-weixin, 
.icon-qq {
	background-image: url(../img/icon-media.png);
	width: 27px;
	height: 27px;
}
.icon-weibo {
	background-position: 0 0;
}
.icon-weixin {
	background-position: 0 -36px;
}
.icon-qq {
	background-position: 0 -70px;
}
/********************** icon end  *****************************/

#header {
	width: 100%;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	background: -webkit-linear-gradient(bottom, #F2F2F2, #FFF);
	background: linear-gradient(bottom, #F2F2F2, #FFF);
}

.header-body, .content, #nav {
	width: 1200px;
	margin: 0 auto;
}

.header-body {
	height: 80px;
	.logo {
		float: left;
		margin: 13px 0 0 27px;
		width: 568px;
		height: 62px;
		overflow: hidden;
		img {
			width: 100%;
			height: 100%;
			border: none;
		}
	}
	.btn-contact {
		float: right;
		margin: 33px 23px 0 0;
	}
}

#banner {
	width: 100%;
	min-width: 1200px;
	height: 500px;
	border-top: 1px solid #ced0d0;
	background: url(../img/banner.jpg) 0 0 no-repeat;
	-webkit-background-size: cover;
	-o-background-size: cover;
	-moz-background-size: cover;
	-ms-background-size: cover;
	background-size: cover;
	.content {
		position: relative;
		.handle-phone {
			position: absolute;
			top: 21px;
			left: 179px;
			width: 397px;
			height: 531px;
			background: url(../img/handle-phone.png) 0 0 no-repeat;
		}
	}
}
.main {
	position: absolute;
	top: 105px;
	left: 674px;
	width: 436px;
	height: 289px;
	.title {
		background: url(../img/title.png) 0 0 no-repeat;
		width: 360px;
		height: 122px;
	}
	.legend {
		font-size: 14px;
		color: #5A5A5A;
		margin-left: 18px;
	}
	.wrap {
		margin: 28px 0 0 18px;
		overflow: hidden;
		.btn-wrap {
			float: left;
			.btn-iphone {
				margin-top: 10px;
			}
		}
		.code {
			float: right;
			text-align: center;
			width: 102px;
			height: 114px;
			font-size: 14px;
			color: #595959;
			img {
				width: 95px;
				height: 94px;
				border: none;
				margin-bottom: 5px;
			}
		}
	}
}

.content {
	.description {
		margin-left: 68px;
		width: 1132px;
		&.mt {
			margin-top: 48px;
		}
		img {
			width: 100%;
			height: auto;
			border: none;
		}
	}
}

#nav {
	width: 100%;
	background: #F1F1F1;
	min-width: 1200px;
}
.nav-ul {
	width: 1200px;
	margin: 0 auto;
	padding: 27px 68px;
	overflow: hidden;
	-webkit-box-sizing: border-box;
	-o-box-sizing: border-box;
	-ms-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	li {
		float: left;
		width: 318px;
		color: #58646B;
		h3 {
			font-size: 16px;
			margin-bottom: 9px;
		}
		p {
			font-size: 14px;
			line-height: 26px;
		}
		&.item3 {
			p {
				line-height: 34px;
				.icon {
					margin-right: 9px;
					margin-top: 4px;
					float: left;
				}
			}
		}
		&.item4 {
			width: 108px;
			img {
				width: 107px;
				height: 101px;
				border: none;
			}
		}
	}
}

#footer {
	width: 100%;
	height: 107px;
	text-align: center;
	color: #313131;
	line-height: 26px;
	.vertion {
		margin-top: 30px;
		font-size: 16px;
		a {
			color: inherit;
			text-decoration: none;
			&:hover {
				text-decoration: underline;
			}
		}
		.dis {
			color: #777;
		}
	}
	.copyright {
		font-size: 14px;
	}
}

.contact-box {
	width: 996px;
	height: 493px;
	-webkit-border-radius: 5px;
	-o-border-radius: 5px;
	-moz-border-radius: 5px;
	-ms-border-radius: 5px;
	-border-radius: 5px;
	.box-heading {
		background: url(../img/heading-bg.png) 0 0 no-repeat;
		width: 996px;
		height: 249px;
	}
	.box-content {
		padding: 0 20px 20px 20px;
		h3 {
			font-size: 16px;
			font-weight: normal;
			color: #222;
			margin: 20px 0 10px 0;
		}
		p {	
			color: #777;
			padding-left: 22px;
			font-size: 14px;
			line-height: 1.8;
		}
	}
}