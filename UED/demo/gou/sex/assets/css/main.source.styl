			display:-webkit-box; padding:px(6) 0 px(8);
			&:after{content:""; display:block; width:px(8); height:px(8); border:solid #797979; border-width:2px 2px 0 0;
				margin-right:px(20); margin-top:px(20); transform:rotate(45deg);}
		}
		.pic{width:px(58); height:px(58); margin-right:px(8); overflow:hidden; background:#eee; img{width:100%; height:100%;}}
		.desc{
			-webkit-box-flex:1; height:px(58); margin-left:px(15);
			p.level{
				margin-top: 1rem;
				img{height:px(16);width:auto;}
			}
		}
		.desc .ico{margin-top:px(22);}
	}
	.pic_detail{
		margin:px(20) 0 px(54); max-width:px(304); overflow:hidden;
		li{text-align:center;}
		img{max-width:px(304);width:100%;}
	}
}

