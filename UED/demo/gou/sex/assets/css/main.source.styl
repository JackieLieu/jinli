@import "nib";
px(num){ (num/20)*1rem }

html{background:#ecf0f1;}
body{font-size:px(12); color:#676767;}
#iScroll{position:absolute; left:0; top:0; bottom:0; width:100%; overflow:auto;}
.myScrollbar{display:none;}

/**
 *
 * Pull down styles
 *
 */
#pullDown, #pullUp {
	background:#fff;
	height:px(40);
	line-height:px(40);
	padding:px(5) px(10);
	border-bottom:1px solid #ccc;
	font-weight:bold;
	font-size:14px;
	color:#888;
	text-align:center;
}
#pullDown .pullDownIcon, #pullUp .pullUpIcon  {
	display:inline-block; vertical-align:middle;
	width:px(40); height:px(40); margin-right:px(6);
	background:url(pull_icon_2x.png) 0 0 no-repeat;
	background-size:px(40) px(80);
	transition-property:transform;
	transition-duration:250ms;	
}
#pullDown .pullDownIcon {
	transform:rotate(0deg) translateZ(0);
}
#pullUp .pullUpIcon  {
	transform:rotate(-180deg) translateZ(0);
}

#pullDown.flip .pullDownIcon {
	transform:rotate(-180deg) translateZ(0);
}

#pullUp.flip .pullUpIcon {
	transform:rotate(0deg) translateZ(0);
}

#pullDown.loading .pullDownIcon, #pullUp.loading .pullUpIcon {
	background-position:0 100%;
	transform:rotate(0deg) translateZ(0);
	transition-duration:0ms;

	animation-name:loading;
	animation-duration:2s;
	animation-iteration-count:infinite;
	animation-timing-function:linear;
}

@keyframes loading {
	from { transform:rotate(0deg) translateZ(0); }
	to { transform:rotate(360deg) translateZ(0); }
}

.tj-list{
	width:px(320); margin:px(4) auto 0;
	//& > *{-webkit-transform-style:preserve-3d;}
	ul{overflow:hidden;}
	li{
		width:px(150); padding:px(4) px(4) px(12); margin-bottom:px(5); background:#fff; box-shadow:0 1px 1px #d4d8d8;
		&:nth-child(2n+1){float:left;}
		&:nth-child(2n){float:right;}
		@media all and (min-width:359px) and (-webkit-min-device-pixel-ratio:1.5){
			&:nth-child(2n){width:px(152);}
		}
		a{display:block;}
		.pic{
			height:px(150); position:relative; margin-bottom:px(8); text-align:center;
			img{position:relative; z-index:1; max-height:px(150); width:auto; max-width:100%;}
		}
		.price{position:absolute; right:px(2); bottom:px(2); z-index:2; padding:0 px(4); height:px(16); line-height:px(16);
			background:rgba(0, 0, 0, .5); color:#fff; text-align:center; font-size:px(9);}
		.desc{line-height:1.5; font-size:px(11); height:px(36);}
	}
}

